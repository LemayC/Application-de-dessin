<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <com.example.a1350150.drawingapp.CanvasView
        android:id="@+id/signature_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:onClick="clearCanvas"
        android:text="Tout effacer" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top">

        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=""
            android:id="@+id/button"
            android:background="@color/colorButton"
            android:onClick="changeDrawingColor"/>

        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=""
            android:id="@+id/button2"
            android:background="@color/colorButton2"
            android:onClick="changeDrawingColor"/>

        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=""
            android:id="@+id/button3"
            android:background="@color/colorButton3"
            android:onClick="changeDrawingColor"/>

        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=""
            android:id="@+id/button4"
            android:background="@color/colorButton4"
            android:onClick="changeDrawingColor"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=""
            android:id="@+id/button5"
            android:background="@color/colorButton5"
            android:onClick="changeDrawingColor"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=""
            android:id="@+id/button6"
            android:background="@color/colorButton6"
            android:onClick="changeDrawingColor"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=""
            android:id="@+id/button7"
            android:background="@color/colorButton7"
            android:onClick="changeDrawingColor"/>
    </LinearLayout>

</FrameLayout>